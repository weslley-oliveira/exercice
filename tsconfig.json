{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "lib": [
      "ESNext",
      "ES2016",
      "ES2017"
    ],
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
  },
  "compileOnSave": true,
  "exclude": ["node_modules"]
}
